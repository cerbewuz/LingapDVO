@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Healthcare Locator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Animate.css for subtle animations -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        :root {
            --primary-color: #DC143C;
            --secondary-color: #858796;
            --success-color: #1cc88a;
            --info-color: #36b9cc;
            --warning-color: #f6c23e;
            --danger-color: #e74a3b;
            --dark-color: #5a5c69;
        }

        body {
            background-color: #f8f9fc;
            font-family: 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .btn-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .hero-section {
            background: linear-gradient(135deg, var(--primary-color) 0%, #224abe 100%);
            color: white;
            border-radius: 0 0 20px 20px;
            padding: 3rem 0;
            margin-bottom: 2rem;
        }

        .category-title {
            position: relative;
            margin: 2rem 0 1.5rem;
            color: var(--dark-color);
        }

            .category-title:after {
                content: "";
                position: absolute;
                left: 50%;
                bottom: -10px;
                transform: translateX(-50%);
                width: 80px;
                height: 3px;
                background: var(--primary-color);
                border-radius: 3px;
            }

        .location-card .card-body {
            padding: 1.5rem;
        }

        .location-icon {
            font-size: 1.75rem;
            margin-bottom: 1rem;
        }

      

        
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h1 class="display-4 fw-bold mb-3"><i class="bi bi-geo-alt-fill"></i> Healthcare Locator</h1>
                    <p class="lead mb-4">Find pharmacies, hospitals, and healthcare offices near you in real-time</p>
                    <a href="javascript:history.back()" class="btn btn-light btn-lg px-4 py-2 fw-bold" role="button">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </a>

                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container">
        <!-- Pharmacies Section -->
        <h2 class="category-title text-center">Pharmacies</h2>
        <div class="row g-4">
            <div class="col-md-6 col-lg-4">
                <div class="card location-card h-100">
                    <div class="card-body text-center">
                        <div class="location-icon text-danger">
                            <i class="bi bi-capsule-pill"></i>
                        </div>
                        <h3 class="h5 mb-3">Rose Pharmacy</h3>
                        <p class="text-muted mb-4">Find your nearest Rose Pharmacy branch</p>
                        <a href="https://www.google.com/maps/search/Rose+Pharmacy+near+me"
                           target="_blank" class="btn btn-outline-danger btn-icon">
                            <i class="bi bi-geo-alt"></i> Locate Now
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card location-card h-100">
                    <div class="card-body text-center">
                        <div class="location-icon text-warning">
                            <i class="bi bi-capsule"></i>
                        </div>
                        <h3 class="h5 mb-3">Mercury Drug</h3>
                        <p class="text-muted mb-4">Davao City branches only</p>
                        <a href="https://www.google.com/maps/search/Mercury+Drug+in+Davao+City"
                           target="_blank" class="btn btn-outline-warning btn-icon">
                            <i class="bi bi-geo-alt"></i> Locate Now
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card location-card h-100">
                    <div class="card-body text-center">
                        <div class="location-icon text-info">
                            <i class="bi bi-stars"></i>
                        </div>
                        <h3 class="h5 mb-3">Southstar Drug</h3>
                        <p class="text-muted mb-4">Find Southstar Drug locations</p>
                        <a href="https://www.google.com/maps/search/Southstar+Drug+near+me"
                           target="_blank" class="btn btn-outline-info btn-icon">
                            <i class="bi bi-geo-alt"></i> Locate Now
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card location-card h-100">
                    <div class="card-body text-center">
                        <div class="location-icon text-success">
                            <i class="bi bi-bag-heart"></i>
                        </div>
                        <h3 class="h5 mb-3">Watsons Pharmacy</h3>
                        <p class="text-muted mb-4">Your health and beauty needs</p>
                        <a href="https://www.google.com/maps/search/Watsons+Pharmacy+near+me"
                           target="_blank" class="btn btn-outline-success btn-icon">
                            <i class="bi bi-geo-alt"></i> Locate Now
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card location-card h-100">
                    <div class="card-body text-center">
                        <div class="location-icon text-dark">
                            <i class="bi bi-hospital"></i>
                        </div>
                        <h3 class="h5 mb-3">Botica Concepcion</h3>
                        <p class="text-muted mb-4">Davao City locations</p>
                        <a href="https://www.google.com/maps/search/New+Botica+Concepcion,+Davao+City"
                           target="_blank" class="btn btn-outline-dark btn-icon">
                            <i class="bi bi-geo-alt"></i> Locate Now
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-4">
                <div class="card location-card h-100">
                    <div class="card-body text-center">
                        <div class="location-icon text-primary">
                            <i class="bi bi-heart-pulse"></i>
                        </div>
                        <h3 class="h5 mb-3">All Pharmacies</h3>
                        <p class="text-muted mb-4">Find all pharmacy options near you</p>
                        <button id="btnAll2" class="btn btn-outline-primary btn-icon">
                            <i class="bi bi-geo-alt"></i> Locate All
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Hospitals Section -->
        <h2 class="category-title text-center mt-5">Hospitals</h2>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card location-card h-100">
                    <div class="card-body text-center">
                        <div class="location-icon text-secondary">
                            <i class="bi bi-ambulance"></i>
                        </div>
                        <h3 class="h5 mb-3">Lingap-Supported Hospitals</h3>
                        <p class="text-muted mb-4">Find hospitals in Davao City that accept Lingap</p>
                        <a href="https://www.google.com/maps/search/Lingap+supported+hospitals+in+Davao+City"
                           target="_blank"
                           class="btn btn-outline-secondary btn-icon">
                            <i class="bi bi-geo-alt"></i> Locate Now
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Offices Section -->
        <h2 class="category-title text-center mt-5">Offices</h2>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card location-card h-100">
                    <div class="card-body text-center">
                        <div class="location-icon text-info">
                            <i class="bi bi-building"></i>
                        </div>
                        <h3 class="h5 mb-3">Lingap Offices</h3>
                        <p class="text-muted mb-4">Locate Lingap offices in Davao City</p>
                        <a href="https://www.google.com/maps/search/Lingap+offices+in+Davao+City"
                           target="_blank"
                           class="btn btn-outline-info btn-icon">
                            <i class="bi bi-geo-alt"></i> Locate Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
    </div>

 

    <!-- Footer -->
    <footer class="bg-light mt-5 py-4">
        <div class="container text-center">
            <p class="text-muted mb-0">© 2023 Healthcare Locator. All rights reserved.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Function to handle locating all pharmacies
        function locateAllPharmacies() {
            const query = [
                'Lingap Pharmacy near me',
                'Rose Pharmacy near me',
                'Mercury Drug in Davao City',
                'Southstar Drug near me',
                'Watsons Pharmacy near me'
            ].join('+OR+');

            const url = `https://www.google.com/maps/search/${query}`;
            window.open(url, '_blank');
        }

        // Add event listeners to both "Locate All" buttons
        document.getElementById('btnAll').addEventListener('click', locateAllPharmacies);
        document.getElementById('btnAll2').addEventListener('click', locateAllPharmacies);

        // Add animation to cards when they come into view
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate__animated', 'animate__fadeInUp');
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.location-card').forEach(card => {
            observer.observe(card);
        });
    </script>
</body>
</html>
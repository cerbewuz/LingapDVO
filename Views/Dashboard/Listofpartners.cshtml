@{
    Layout = null;
}

<div class="partners-container">
    <!-- Back Button -->
    <div class="back-button-container">
        <a href="javascript:history.back()" class="back-button">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    <!-- Header -->
    <div class="partners-header">
        <h1>Our Valued Partners</h1>
        <p>Collaborating to bring you the Lingap Program services</p>
    </div>

    <!-- Partners Grid -->
    <div class="partners-grid">
        <!-- PCSO -->
        <div class="partner-card">
            <div class="partner-logo-container">
                <img src="/listofpartners/pcso.png" alt="PCSO Logo" class="partner-logo" />
            </div>
            <h3>Philippine Charity Sweepstakes Office</h3>
            <p>Providing medical assistance and charity programs</p>
        </div>

        <!-- DSWD -->
        <div class="partner-card">
            <div class="partner-logo-container">
                <img src="/listofpartners/dswd.png" alt="DSWD Logo" class="partner-logo" />
            </div>
            <h3>Department of Social Welfare and Development</h3>
            <p>Social protection and poverty reduction programs</p>
        </div>

        <!-- Malasakit Center -->
        <div class="partner-card">
            <div class="partner-logo-container">
                <img src="/listofpartners/malasakit.png" alt="Malasakit Center Logo" class="partner-logo" />
            </div>
            <h3>Malasakit Center</h3>
            <p>One-stop shop for medical and financial assistance</p>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --light-color: #ecf0f1;
        --dark-color: #2c3e50;
        --text-color: #7f8c8d;
    }

    /* Global reset and responsive base */
    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 16px;
        line-height: 1.5;
        color: var(--text-color);
        background-color: var(--light-color);
    }

    .partners-container {
        width: 100%;
        max-width: 1200px;
        padding: min(5vw, 2rem);
        margin: 0 auto;
    }

    /* Back Button Styles */
    .back-button-container {
        margin-bottom: min(4vw, 1.5rem);
    }

    .back-button {
        display: inline-flex;
        align-items: center;
        padding: min(2vw, 0.6rem) min(3vw, 1rem);
        background-color: var(--secondary-color);
        color: white;
        text-decoration: none;
        border-radius: 6px;
        font-size: clamp(0.8rem, 2vw, 0.9rem);
        transition: all 0.3s ease;
    }

        .back-button i {
            margin-right: 0.5em;
        }

        .back-button:hover {
            background-color: var(--primary-color);
            transform: translateX(-3px);
        }

    /* Header Styles */
    .partners-header {
        text-align: center;
        margin-bottom: 2rem;
        padding: 0 1rem;
    }

        .partners-header h1 {
            font-size: clamp(1.5rem, 5vw, 2.5rem);
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .partners-header p {
            font-size: clamp(0.9rem, 3vw, 1.2rem);
            color: var(--text-color);
        }

    /* Partners Grid Styles */
    .partners-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(min(100%, 280px), 1fr));
        gap: min(4vw, 1.5rem);
        padding: min(2vw, 0.5rem);
    }

    .partner-card {
        background: white;
        border-radius: 10px;
        padding: min(5vw, 1.5rem);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .partner-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

    .partner-logo-container {
        height: min(25vw, 100px);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: min(3vw, 1rem);
    }

    .partner-logo {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        filter: grayscale(20%);
        transition: filter 0.3s ease;
    }

    .partner-card:hover .partner-logo {
        filter: grayscale(0%);
    }

    .partner-card h3 {
        font-size: clamp(1rem, 4vw, 1.3rem);
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .partner-card p {
        font-size: clamp(0.85rem, 3vw, 1rem);
        color: var(--text-color);
        line-height: 1.6;
    }

    /* Responsive adjustments without media queries */
</style>

<!-- Font Awesome for the back button icon -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">